  <tbody>
    
    <% @lists.each do |list| %>
   
    
    <tr class="table-secondary">
      <td><%= link_to list.description, edit_list_path(list), class: "#{'striker' if list.completed}" %></td>
      <% if list.completed == false%>
        <td> <%= form_for list do |f| %>
        
        <%= f.check_box :completed, :checked => true, :style => "visibility: hidden" %>
        <%= f.submit "Cross Off", class:"btn btn-outline-secondary%>
           </td >
           <% end %>
       <% else %>
          <td> <%= form_for list do |f| %>
        
        <%= f.check_box :completed, :checked => false, :style => "visibility: hidden" %>
        <%= f.submit "UnCross", class:"btn btn-outline-secondary" %>
           </td >
        <%end %>
        <% end %>
        <td> <%= button_to "Delete", list_path(list), :method => :delete, class:"btn btn-danger", data:{confirm:"Are you sure?" } %></td>
      
    </tr>
    <tr>
      
    
  <% end %>


  


